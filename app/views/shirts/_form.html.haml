= form_for @shirt do |f|
  - if @shirt.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shirt.errors.count, "error")} prohibited this shirt from being saved:"
      %ul
        - @shirt.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :primary_color
    = f.text_field :primary_color
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
